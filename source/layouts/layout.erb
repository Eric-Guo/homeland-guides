<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <link rel="icon" href="/images/favicon.png">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Homeland" %></title>

    <%= stylesheet_link_tag 'bootstrap.min', 'homeland' %>
    <%= javascript_include_tag 'jquery.min', 'tether.min', 'bootstrap.min' %>
  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-dark bg-primary bg-faded navbar-full">
      <div class="container">
        <a class="navbar-brand" href="/"><%= image_tag("icon-inverse.svg", alt: "Homeland") %></a>
        <div id="navbarResponsive" class="collapse navbar-toggleable-md">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/expo">Expo</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/install">Install</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/docs">Documentation</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" target="_blank" href="http://try.gethomeland.com">Try It</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Blog</a>
            </li>
            <li class="nav-item float-lg-right">
              <a class="nav-link btn btn-outline-success" href="http://github.com/ruby-china/homeland" target="_blank">Fork on GitHub</a>
            </li>
          </ul>
        </div>
        <button class="navbar-toggler hidden-lg-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"></button>
      </div>
    </nav>

    <div id="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <footer>
      <div class="container">
        <p>
          <span class="dark-logo"><%= image_tag("icon-inverse.svg", alt: "Homeland") %></span> &copy; Homeland 2016. </p>
      </div>
    </footer>
  </body>
</html>
