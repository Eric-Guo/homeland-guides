<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Homeland" %></title>

    <%= stylesheet_link_tag 'bootstrap.min', 'homeland' %>
    <%= javascript_include_tag 'bootstrap.min' %>
  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-dark bg-primary bg-faded navbar-full">
      <div class="container">
        <a class="navbar-brand" href="/">Homeland</a>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/expo">Expo</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/install">Install</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" target="_blank" href="http://try.gethomeland.com">Try It</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Blog</a>
          </li>
          <li class="nav-item float-xs-right">
            <a class="nav-link btn btn-outline-success" href="http://github.com/ruby-china/homeland" target="_blank">Fork on GitHub</a>
          </li>
        </ul>
      </div>
    </nav>

    <div id="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <footer>
      <div class="container">
        <p>&copy; Homeland 2016. </p>
      </div>
    </footer>
  </body>
</html>
